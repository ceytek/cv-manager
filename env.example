# ===========================================
# HRSmart - Production Environment Variables
# Copy this file to .env and fill in the values
# ===========================================

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=hrsmart
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE
POSTGRES_DB=hrsmart_db

# ===========================================
# Backend
# ===========================================
# JWT Secret - Generate with: openssl rand -hex 32
SECRET_KEY=YOUR_SECRET_KEY_HERE

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://test.hrsmart.co

# ===========================================
# AI Service (OpenAI)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
MODEL_NAME=gpt-4o-mini

# ===========================================
# Email Configuration
# ===========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=HRSmart

# Optional: Mailtrap API (for production email)
MAILTRAP_API_TOKEN=

# ===========================================
# Frontend (Build-time variables)
# ===========================================
VITE_GRAPHQL_URL=https://test.hrsmart.co/graphql
VITE_WS_URL=wss://test.hrsmart.co/graphql

# ===========================================
# Initial Admin User (Optional - first run only)
# ===========================================
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=YOUR_ADMIN_PASSWORD_HERE

